<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns="http://dozer.sourceforge.net"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://dozer.sourceforge.net
          http://dozer.sourceforge.net/schema/beanmapping.xsd">
          
    <!-- Custom Converters -->
	<configuration>
		<relationship-type>non-cumulative</relationship-type>
	    <custom-converters>
	        <converter type="be.seriousbusiness.brusselnieuws.rss.datasource.dto.dozer.converter.MediumTypeDTOToMediumTypeConverter">
	            <class-a>be.seriousbusiness.brusselnieuws.rss.datasource.dto.MediumTypeDTO</class-a>
	            <class-b>be.seriousbusiness.brusselnieuws.rss.model.MediumType</class-b>
	        </converter>
	        <converter type="be.seriousbusiness.brusselnieuws.rss.datasource.dto.dozer.converter.LongToDateTimeConverter">
	        	<class-a>java.lang.Long</class-a>
	            <class-b>org.joda.time.DateTime</class-b>
	        </converter>
	    </custom-converters>
	</configuration>
          
   	<!-- CategoryDTO to AdaptableCategory -->
	<mapping> 
		<class-a>be.seriousbusiness.brusselnieuws.rss.datasource.dto.CategoryDTO</class-a>
		<class-b>be.seriousbusiness.brusselnieuws.rss.model.adaptable.AdaptableCategory</class-b> 
	</mapping>  
	
	<!-- AuthorDTO to AdaptableAuthor -->
	<mapping>
		<class-a>be.seriousbusiness.brusselnieuws.rss.datasource.dto.AuthorDTO</class-a>
		<class-b>be.seriousbusiness.brusselnieuws.rss.model.adaptable.AdaptableAuthor</class-b>
	</mapping>
	
	<!-- MediumDTO to AdaptablMedium -->
	<mapping>
	  	<class-a>be.seriousbusiness.brusselnieuws.rss.datasource.dto.MediumDTO</class-a>
	  	<class-b>be.seriousbusiness.brusselnieuws.rss.model.adaptable.AdaptableMedium</class-b>
	  	<!-- Mapping of MediumTypeDTO to MediumType -->
		 <field>
			<a>mediumTypeDTO</a> 
			<b>type</b>
		</field>
	</mapping>
	
	<!-- ArticleDTO to AdaptablArticle -->
	<!-- Following used custom converters are set in the mapper which is injected by Spring -->
	<!-- The configuration can be found in: test-dozer-config.xml -->
	<!-- This is solely because these converters are Autowired and need to be injected by Spring -->
	<mapping>
	  	<class-a>be.seriousbusiness.brusselnieuws.rss.datasource.dto.ArticleDTO</class-a>
	  	<class-b>be.seriousbusiness.brusselnieuws.rss.model.adaptable.AdaptableArticle</class-b>
	  	<field custom-converter-id="CategoryDTOSetToAdaptableCategoryListConverter">
	  		<a>categoryDTOs</a>
	  		<b>categories</b>
	  	</field>
	  	<field custom-converter-id="AuthorDTOSetToAdaptableAuthorListConverter">
	  		<a>authorDTOs</a>
	  		<b>authors</b>
	  	</field>
	  	<field custom-converter-id="MediumDTOSetToAdaptableMediumListConverter">
	  		<a>mediumDTOs</a>
	  		<b>media</b>
	  	</field>
	</mapping>
	
	<!-- FeedDTO to AdaptablFeed -->
	<mapping>
	  	<class-a>be.seriousbusiness.brusselnieuws.rss.datasource.dto.FeedDTO</class-a>
	  	<class-b>be.seriousbusiness.brusselnieuws.rss.model.adaptable.AdaptableFeed</class-b>
	  	<field custom-converter-id="FeedDTOSetToAdaptableFeedListConverter">
	  		<a>articleDTOs</a>
	  		<b>articles</b>
	  	</field>
	</mapping>
</mappings>